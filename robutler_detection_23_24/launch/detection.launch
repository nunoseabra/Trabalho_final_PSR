<?xml version="1.0"?>
<launch>
    <arg name="image" default="/camera2/rgb/image_raw2"/>
    <arg name="use_yolo" default="true"/>
    <arg name="use_spheres" default="true"/>

    <include file="$(find darknet_ros)/launch/darknet_ros.launch">
        <arg name="image" value="$(arg image)"/>
    </include>

    <node pkg="robutler_detection_23_24" type="detection.py" name="objects_detector" output="screen" if="$(arg use_yolo)"/>

    <node pkg="robutler_detection_23_24" type="colorgrama.py" name="sphere_detector_node" output="screen" if="$(arg use_spheres)"/>

</launch>
